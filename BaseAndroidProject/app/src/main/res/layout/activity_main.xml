<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="11dp"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.211"
            app:layout_constraintVertical_bias="0.898" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/searchText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/searchButton"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="141dp" android:layout_marginStart="141dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="155dp"
            android:layout_marginRight="155dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/searchText" android:layout_marginBottom="368dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hitCountText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="82dp"
            android:layout_marginStart="82dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="244dp"
            android:layout_marginRight="244dp" android:layout_marginBottom="213dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" android:layout_marginTop="123dp"
            app:layout_constraintTop_toBottomOf="@+id/searchText"/>

</android.support.constraint.ConstraintLayout>