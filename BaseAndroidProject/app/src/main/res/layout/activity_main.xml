<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start Location Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/stopServiceButton" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/stopServiceButton"/>
    <Button
            android:text="Stop Service"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:id="@+id/stopServiceButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="157dp"/>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogout"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="38dp" android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>