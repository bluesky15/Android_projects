<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:text="Ch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChannel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="62dp"
            app:layout_constraintTop_toBottomOf="@+id/mRecyclerView"/>
    <include
            android:id="@+id/mRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/recycler_view"
            android:layout_marginTop="79dp" android:layout_marginBottom="42dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnChannel" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="ch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnChannel3"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnChannel" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/btnChannel"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>