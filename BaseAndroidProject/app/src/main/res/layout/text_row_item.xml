<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="Jane Doe"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp" />

    <TextView
            android:text="121 Baker's street London, United Kingdom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddress"
            android:textStyle="italic"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            android:layout_marginTop="4dp" />

    <TextView
            android:text="Contact Details: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvContactLabel"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            app:layout_constraintStart_toStartOf="@+id/tvAddress" />

    <TextView
            tools:text="9988774444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvContact"
            app:layout_constraintBottom_toBottomOf="@+id/tvContactLabel"
            app:layout_constraintTop_toTopOf="@+id/tvContactLabel"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvContactLabel" />

    <TextView
            android:text="Credit Limit :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCreditLimit"
            app:layout_constraintStart_toStartOf="@+id/tvContactLabel"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContactLabel" />

    <TextView
            tools:text="100000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCreditLimitValue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/tvCreditLimit"
            app:layout_constraintTop_toTopOf="@+id/tvCreditLimit"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvCreditLimit" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"
            app:layout_constraintTop_toBottomOf="@+id/tvCreditLimit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>