<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="2dp">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:background="@drawable/music"
                   android:id="@+id/imageView2"
                   card_view:layout_constraintTop_toTopOf="parent"
                   card_view:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:textSize="24sp"
                android:gravity="center"
                android:id="@+id/info_text"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio city Hindi"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"/>
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" card_view:srcCompat="@drawable/ic_play_icon"
                android:id="@+id/playImage"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>