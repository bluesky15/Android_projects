<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:background="@drawable/music"
                   android:id="@+id/imageView2"
                   card_view:layout_constraintTop_toTopOf="parent"
                   card_view:layout_constraintStart_toStartOf="parent"
        />

        <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Radio city Hindi"
                android:textColor="#ffffff"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/playImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:srcCompat="@drawable/ic_play_icon" />

        <es.claucookie.miniequalizerlibrary.EqualizerView
                android:id="@+id/equalizerView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                custom:animDuration="3500"
                custom:layout_constraintEnd_toEndOf="@+id/playImage"
                custom:layout_constraintStart_toStartOf="@+id/playImage"
                custom:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>