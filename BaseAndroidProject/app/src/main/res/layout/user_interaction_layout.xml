<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserLimit"
            android:text="10000"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvLimitLable"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/tvLimitLable" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddress"
            android:textSize="12sp"
            android:text="33 Backer's street London"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <TextView
            android:text="Jhon Doe"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            app:layout_constraintStart_toStartOf="@+id/tvUserDetailsLable"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserDetailsLable" />

    <TextView
            android:text="User Transaction"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserDetailsLable"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp" />

    <TextView
            android:text="Credit Limit:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLimitLable"
            android:layout_marginTop="11dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tvUserDetailsLable"
            app:layout_constraintStart_toEndOf="@+id/tvUserName" />

    <Button
            android:text="New Credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNewCredit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <Button
            android:text="Add Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddCollection"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            android:layout_marginEnd="31dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Amount"
            android:ems="10"
            android:id="@+id/etTransactionAmount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddress"
            android:layout_marginTop="16dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Date"
            android:ems="10"
            android:id="@+id/editTextDate"
            app:layout_constraintStart_toStartOf="@+id/etTransactionAmount"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etTransactionAmount" />

    <TextView
            android:text="dd-mm-yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextDate"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/editTextDate" />

    <Button
            android:text="View All Transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewAllTransaction"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNewCredit" />
</androidx.constraintlayout.widget.ConstraintLayout>